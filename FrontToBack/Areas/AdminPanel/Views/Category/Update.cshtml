
@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
<form method="post">
  <div class="form-group">
     <label asp-for="Name" ></label>
     <input asp-for="Name"  class="form-control"  aria-describedby="emailHelp" placeholder="Enter Name">
     <span class="text-danger" asp-validation-for="Name"></span>
  </div>
  <div class="form-group">
     <label asp-for="Description" ></label>
     <input asp-for="Description"  class="form-control"  aria-describedby="emailHelp" placeholder="Enter Name">
     <span class="text-danger" asp-validation-for="Description"></span>
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
 <a class="btn btn-dark" asp-action="Index">Go Back</a>
</form>
</div>
@section scripts
{
    <partial name="_ValidationPartial"></partial>
}
