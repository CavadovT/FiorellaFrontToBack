
@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/admin/js/ckeditor/ckeditor.js"></script>
<script src="~/admin/js/ckeditor/build-config.js"></script>
<script src="~/admin/js/ckeditor/config.js"></script>

<div class="row">
    <h1>Category</h1>
        <form method="post">
          <div class="form-group">
             <label asp-for="Name" ></label>
             <input asp-for="Name"  class="form-control"  placeholder="Enter Name">
             <span class="text-danger" asp-validation-for="Name"></span>
          </div>
          <div class="form-group">
             <label asp-for="Description" ></label>
             <input asp-for="Description"  class="form-control"   placeholder="Enter Name">
             <span class="text-danger" asp-validation-for="Description"></span>
          </div>
          <button type="submit" class="btn btn-success">Submit</button>
         <a class="btn btn-dark" asp-action="Index">Go Back</a>
        </form>
</div>
@section scripts
{

    <partial name="_ValidationPartial"></partial>

    
}
 <script>
    
    $(document).ready(function () {
 CKEDITOR.replace(‘#Description’); 
});
     </script>
