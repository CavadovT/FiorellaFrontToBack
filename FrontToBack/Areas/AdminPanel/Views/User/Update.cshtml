@model RoleVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <form method="post">
        <h1>@Model.FullName</h1>
        <input type="hidden" name="id" value="@Model.UserId"/>
      <div class="form-group">
        @foreach (var item in Model.Roles)
       {
         <input name="roles" value="@item.ToString()" class="form-check-input" type="checkbox" @(Model.UserRoles.Contains(item.ToString())?"checked=\"checked\"":"")>@item <br />
           
       }
         
      </div>
      
      <button type="submit" class="btn btn-success">Submit</button>
     <a class="btn btn-dark" asp-action="Index">Go Back</a>
    </form>
</div>
@section scripts
{
    <partial name="_ValidationPartial"></partial>
}

